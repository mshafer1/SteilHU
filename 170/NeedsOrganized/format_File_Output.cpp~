//this program writes text to a file

#include<fstream>

using std::ofstream;
using std::ios;

int main()
{
	ofstream Junk;

	Junk.open("junk.txt");

	Junk << "Bob";
	Junk << " Jones\n";
	
	Junk << "Bob";
	
	Junk.setf(ios::left);
	Junk.width(25);
	Junk << "Jones";

    return 0;
    //look for the file junk.txt
}
