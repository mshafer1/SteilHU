#include<iostream>
#include<cstdlib>
#include<time.h>
#include<conio>

using std::cout;
using std::cin;
using std::endl;

int main()
{
	int DieOne;
	int DieTwo;
	int Sums[11];
	
	srand(time(0));

	int j;
	for (j = 0; j <11; j++)
	{
		Sums[j] = 0;
	}
	
	for (int i = 0; i < 1000000; i++)
	{
		DieOne = (rand()% 6) + 1;
		DieTwo = (rand()% 6) + 1;

		Sums[DieOne + DieTwo - 2]++;

		//cout << "Die One is " << DieOne << " ";
		//cout << "Die Two is " << DieTwo << endl;
		
		//getch();
		///system("cls");
	}
	for (j = 0; j < 11; j++)
	{
		cout << Sums[j] << endl;
	}
    cin.get();
    return 0;
}

















